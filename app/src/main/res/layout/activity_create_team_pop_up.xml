<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_team_pop_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logan.test2.CreateTeamPopUp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="44dp"
        android:id="@+id/EnterTeamNameEditText"
        android:textAllCaps="false"
        android:background="@android:color/white"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/tfEnterTeamName" />

    <Button
        android:text="@string/cancelTeamCreateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelTeamCreateButton"
        android:layout_alignBaseline="@+id/teamCreatePopUpButton"
        android:layout_alignBottom="@+id/teamCreatePopUpButton"
        android:layout_alignLeft="@+id/EnterTeamNameEditText"
        android:layout_alignStart="@+id/EnterTeamNameEditText"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <Button
        android:text="@string/teamCreatePopUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="45dp"
        android:id="@+id/teamCreatePopUpButton"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/EnterTeamNameEditText"
        android:layout_alignEnd="@+id/EnterTeamNameEditText" />
</RelativeLayout>
