<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matdark"
    tools:context="com.example.logan.test2.HomepageActivity">

    <Button
        android:id="@+id/btn_create_team"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_add"
        android:paddingLeft="15dp"
        android:drawableTint="#88BBD6"
        android:background="@drawable/rounded"
        android:backgroundTint="#88BBD6"
        android:text="Create Team"
        android:textAlignment="center"
        android:textColor="@color/TeamBlue"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.542"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/btn_existing_teams"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded"
        android:backgroundTint="#88BBD6"
        android:drawableLeft="@drawable/ic_person"
        android:drawableTint="#88BBD6"
        android:paddingLeft="15dp"
        android:text="Existing Teams"
        android:textAlignment="center"
        android:textColor="@color/TeamBlue"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_create_team"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_create_team"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="183dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded"
        android:backgroundTint="#88BBD6"
        android:drawableLeft="@drawable/ic_settings"
        android:drawableTint="#88BBD6"
        android:paddingLeft="15dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/TeamBlue"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_existing_teams"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_existing_teams"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_existing_teams" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="539dp"
        android:layout_height="381dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="#88BBD6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/teamstat_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>