<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_create_team_pop_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matdark"

    tools:context="com.example.logan.test2.com.android.teamstats.Activity.CreateTeamActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:text="Enter Team Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/Linen"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txt_team_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/Linen"
        android:hint="Team name "
        android:inputType="text"
        android:textAppearance="?android:attr/textAppearance"
        android:textColor="@color/Linen"
        android:textColorHint="@color/Linen"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_team_name"
        android:layout_marginTop="37dp"
        android:backgroundTint="#88BBD6"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:text="add team"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp" />

</RelativeLayout>
