<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_team_pop_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/matdark"
    android:layout_margin="8dp"
    tools:context="com.example.logan.test2.CreateTeamActivity">


    <EditText
    android:id="@+id/txt_team_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:hint="Team name "
    android:inputType="text"
    android:textAppearance="?android:attr/textAppearance"
    android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txt_team_name"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:text="add team"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
